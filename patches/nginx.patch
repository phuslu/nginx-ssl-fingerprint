+int
+ngx_ssl_client_hello_cb(SSL *s, int *al, void *arg) {
+    ngx_connection_t  *c = arg;
+
+    if (c == NULL) {
+        return 1;
+    }
+
+    if (c->ssl == NULL) {
+        return 1;
+    }
+
+    c->ssl->extensions.data = NULL;
+    c->ssl->extensions.len = 0;
+    SSL_client_hello_get_extension_order(c->ssl->connection, NULL, &c->ssl->extensions.len);
+    if (c->ssl->extensions.len) {
+        c->ssl->extensions.data = ngx_pnalloc(c->pool, c->ssl->extensions.len*2);
+        SSL_client_hello_get_extension_order(c->ssl->connection, (uint16_t*)c->ssl->extensions.data, &c->ssl->extensions.len);
+    }
+
+    return 1;
+}
+
+void
+ngx_ssl_client_hello_ext(ngx_connection_t *c) {
+    ngx_ssl_connection_t *ssl = c->ssl;
+
+    if (ssl == NULL) {
+        return;
+    }
+
+    ssl->ciphers.data = NULL;
+    ssl->ciphers.len = SSL_ctrl(ssl->connection, SSL_CTRL_GET_RAW_CIPHERLIST, 0, &ssl->ciphers.data);
+
+    ssl->groups.data = NULL;
+    ssl->groups.len = SSL_ctrl(ssl->connection, SSL_CTRL_GET_IANA_GROUPS, 0, &ssl->groups.data);
+
+    ssl->points.data = NULL;
+    ssl->points.len = SSL_ctrl(ssl->connection, SSL_CTRL_GET_EC_POINT_FORMATS, 0, &ssl->points.data);
+
+    return;
+}
 
